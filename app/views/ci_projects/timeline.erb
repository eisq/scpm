<%= link_to('Configure', {:action=>'timeline_config'}, {:class=>'menu grey'}) %>
<br/><br/>

<table class="timeline_table">
	<tr>
		<th class="timeline_th_summary">#ID - Summary</th>
		<th class="timeline_th">Responsible</th>
		<th class="timeline_th">Validator</th>
		<th class="timeline_th">Start date</th>
		<th class="timeline_th">Status</th>
		<th class="timeline_th">Validation date delay (vs initial date in weeks)</th>
		<th class="timeline_th">Deployment date delay (vs initial date in weeks)</th>
		<th class="timeline_th">Planning external validation</th>
		<th class="timeline_th_separation"></th>
		<% @dates.each do |date| %>
			<th class="timeline_th_date">
			<% @weeks_ccb.each do |week_ccb| %>
				<% if week_ccb.week == date.date_week %>
					<% if week_ccb.date_type == "CCB Date" %>
						<span class="timeline_th_date_ccb">
					<% elsif week_ccb.date_type == "CCB Deployment" %>
						<span class="timeline_th_date_ccb_deployment">
					<% end %>
				<% else %>
					<% if date.date_string == @date_today %>
						<span class="timeline_th_date_span_today">
					<% else %>
						<span class="timeline_th_date_span">
					<% end %>
				<% end %>
			<% end %>
			<%= date.date_string %></span></th>
		<% end %>
	</tr>

	<% @timeline_projects.each do |project| %>
	<tr class="timeline_tr">
		<td class="timeline_td">#<%= project.id %> - <%= project.name %></td>
		<td class="timeline_td"><%= project.responsible %></td>
		<td class="timeline_td"><%= project.validator %></td>
		<td class="timeline_td"><%= project.start_date %></td>
		<td class="timeline_td"><%= project.status %></td>
		<td class="timeline_td"><%= project.validation_date_delay %></td>
		<td class="timeline_td"><%= project.deployment_date_delay %></td>
		<td class="timeline_td"><%= project.planning_external_validation %></td>
		<td class="timeline_td_separation"></td>
		<% for i in 0..24 %>
			<% if i == 12 %>
				<td class="timeline_td_date_today"></td>
			<% else %>
				<td></td>
			<% end %>
		<% end %>
	</tr>
	<% end %>
</table>