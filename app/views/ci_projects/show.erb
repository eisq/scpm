<% p = @project %>

<h2>
  <% if p.strategic==1 %><%=image_tag('danger.gif')%><%end%>
  <%=link_to(p.external_id, "https://sqli.steering-project.com/mantis/view.php?id=#{p.internal_id}")%>
  | <%= p.summary %>
</h2>

<table>
<tr>
  <td>
    <%= link_to('Edit CI', {:action=>'edit', :id=>p.id}, {:class=>'btnlnk'}) %>
    <%= link_to('Add reporting', {:action=>'edit_report', :id=>p.id}, {:class=>'btnlnk'}) %>
  </td>
</tr>
<tr>
  <td>
    <h3>
      <u>Dates</u>
    </h3>
    <p><b>Kick-off date:</b> <span class="<%=CiProject.late_css(p.kick_off_date)%>"><%= p.kick_off_date.to_s %></span></p>
    <p><b>Launching date:</b> <span class="<%=CiProject.late_css(p.launching_date_ddmmyyyy)%>"><%= p.launching_date_ddmmyyyy.to_s %></span></p>
    <p>&nbsp;</p>
    <p><b>SQLI validation status:</b> 
      <% if p.sqli_validation_done == 1 %>
      Done
      <% else %>
      Not done yet
      <% end %>
    <p><b>SQLI validation date objective:</b> <% if p.sqli_validation_done != 1 %> <span class="<%=CiProject.late_css(p.sqli_validation_date_objective)%>"> <% end %> <%= p.sqli_validation_date_objective.to_s %> <% if p.sqli_validation_done != 1 %></span><% end %></p>
    <p><b>SQLI validation date:</b> <% if p.sqli_validation_done != 1 %><span class="<%=CiProject.late_css(p.sqli_validation_date)%>"><% end %><%= p.sqli_validation_date.to_s %><% if p.sqli_validation_done != 1 %></span><% end %></p>
    <p>&nbsp;</p>
    <p><b>Airbus validation status:</b> 
      <% if p.airbus_validation_done == 1 %>
      Done
      <% else %>
      Not done yet
      <% end %>
    <p><b>Airbus validation date objective:</b> <% if p.airbus_validation_done != 1 %><span class="<%=CiProject.late_css(p.airbus_validation_date_objective)%>"><% end %><%= p.airbus_validation_date_objective.to_s %><% if p.airbus_validation_done != 1 %></span><% end %></p>
    <p><b>Airbus validation date:</b> <% if p.airbus_validation_done != 1 %><span class="<%=CiProject.late_css(p.airbus_validation_date)%>"><% end %><%= p.airbus_validation_date.to_s %><% if p.airbus_validation_done != 1 %></span><% end %></p>
    <p>&nbsp;</p>
    <p><b>Deployment status:</b> 
      <% if p.deployment_done == 1 %>
      Done
      <% else %>
      Not done yet
      <% end %>
    <p><b>Deployment date objective:</b> <% if p.deployment_done != 1 %><span class="<%=CiProject.late_css(p.deployment_date_objective)%>"><% end %><%= p.deployment_date_objective.to_s %><% if p.deployment_done != 1 %></span><% end %></p>
    <p><b>Deployment date:</b> <% if p.deployment_done != 1 %><span class="<%=CiProject.late_css(p.deployment_date)%>"><% end %><%= p.deployment_date.to_s %><% if p.deployment_done != 1 %></span><% end %></p>
  </td><td width=50>
  </td><td valign=top>
    <h3>
      <u>Information</u>
    </h3>
    <p><b>Backlog request ID:</b> <%= p.backlog_request_id.to_s %></p>
    <p><b>Assigned to:</b> <%= p.assigned_to %></p>
    <p><b>Priority:</b> <%= p.priority %></p>
    <p><b>SVN delivery folder: </b> <%= p.svn_delivery_folder %></p>
    <p><b>CI Objectives 2014:</b></p>
    <p><%= p.ci_objectives_2014 %></p>
  </td>
</tr>
</table>
<table><tr>
  <td valign=top>
    <h3>
      <u>CI Follow-up</u>
    </h3>
    <p><b>Reporting:</b></p>
    <p><%= p.report %></p>
    <p><b>Previous reporting:</b></p>
    <p><%= p.previous_report %></p>
  </td>
</tr></table>
