	} else if(date_title == "deployment_justif"){
		var old_date1 = new Date("<%= @project.deployment_date %>")
		var old_date2 = new Date("<%= @project.deployment_date_objective %>")
	}

	var date1 = new Date(date)
	var date2 = new Date(date_objective)

	if(old_date1 == ""){
		if (date1 > date2){
			$(date_title).style.display='table-row';
		}
	} else if(old_date1 != ""){
		if (date1 > old_date1){
			$(date_title).style.display='table-row';
		}
	}
}
