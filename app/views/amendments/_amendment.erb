<tr id="am_<%=amendment.id%>" class="amendment<%=amendment.done%>">

<td><%= amendment.id %></td>

<td>
<b>
<% if amendment.project %><%= amendment.project.full_name %><% end %>
</b>
</td>

<td>
<%= amendment.milestone %>
</td>

<td>
<%= amendment.amendment %>
</td>

<td>
<%= amendment.action %>
</td>

<td>
<%= amendment.responsible %>
</td>

<td>
  <% if amendment.done==0 and amendment.duedate  and amendment.duedate <= Date.today()+4.days %>
  <strong><%= amendment.duedate %></strong>
  <% else %>
    <%= amendment.duedate %>
  <% end %>
</td>

<td>
<%= amendment.closing_date %>
</td>	
	
<td>
<%= amendment.done_date %>
</td>	
	
<td>
<% if @editable == true %>
	<%= link_to(image_tag('edit.gif'), {:controller=>'amendments', :action=>'edit', :id=>amendment.id}) %>
	<%= link_to_remote(image_tag('delete.gif'), :url=>{:controller=>'amendments', :action=>'destroy', :id=>amendment.id}, :confirm=>"You should change the amendment status to 'done', are you sure you want to delete this amendment ?", :success=>"$('am_#{amendment.id}').hide();") %>
<% end %>
<%#= link_to_remote(image_tag('cut.png'), :url=>{:controller=>'amendments', :action=>'cut', :id=>amendment.id}) %>
</td>
</tr>
