<SCRIPT language="Javascript">
function reason_one_select(reason_one_id)
{
  location.replace("?milestone_id=<%= @milestone_id %>&planned_date=<%=@planned_date%>&current_date=<%=@current_date%>&delay_days=<%=@delay_days%>&select_reason_one="+reason_one_id);
}
function reason_two_select(reason_two_id)
{
  var reason_one_select_id = document.getElementById("select_reason_one").value;
  location.replace("?milestone_id=<%= @milestone_id %>&planned_date=<%=@planned_date%>&current_date=<%=@current_date%>&delay_days=<%=@delay_days%>&select_reason_one="+reason_one_select_id+"&select_reason_two="+reason_two_id);
}
function reason_three_select(reason_three_id)
{
	if ((reason_three_id == 7) || (reason_three_id == 13) || (reason_three_id == 16) || (reason_three_id == 17) || (reason_three_id == 25) || (reason_three_id == 28) || (reason_three_id == 32)) {
		document.getElementById("reason_other").disabled = false;
	} else {
		document.getElementById("reason_other").disabled = true;
	}
}
</SCRIPT>

<h2>Delay record</h2>

<%= form_tag :action => 'add_delay_record' %>

<%= hidden_field_tag 'milestone_id', @milestone_id %>
<%= hidden_field_tag 'planned_date', @planned_date %>
<%= hidden_field_tag 'current_date', @current_date %>
<%= hidden_field_tag 'delay_days', @delay_days %>

<p><%= label_tag 'Reason' %><p>

<%= select_tag("select_reason_one", options_for_select(@reason_ones.map{|reason| [reason.reason_description, reason.id]}.insert(0, ""), @reason_one_selected), {:onchange=>"reason_one_select(this.value)", :style=>"width:185px"}) %>

<%= select_tag("select_reason_two", options_for_select(@reason_twos.map{|reason| [reason.reason_description, reason.id]}.insert(0, ""), @reason_two_selected), {:onchange=>"reason_two_select(this.value)", :style=>"width:185px"}) %>

<%= select_tag("select_reason_three", options_for_select(@reason_threes.map{|reason| [reason.reason_description, reason.id]}.insert(0, "")), {:onchange=>"reason_three_select(this.value)", :style=>"width:185px"}) %>

<p><%= label_tag 'Other reason' %>
<%= text_area_tag('reason_other', '', {:cols=>21, :rows=>1, :id=>"reason_other", :disabled=>@other_disabled}) %></p>

<p><%= label_tag '&nbsp;' %>
<%= submit_tag 'Save' %></p>

</form>