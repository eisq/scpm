<SCRIPT language="Javascript">
var chart_deliverable 	= null;
var chart_activity 		= null;
function change_meta_activity(meta_activity_id)
{
	location.replace(generate_url("index_history?deviation_spider_id=<%= @last_spider.id.to_s %>&meta_activity_id="+meta_activity_id));
}

function generate_url(action_name) {
  if(location.toString().indexOf("index_history") !== -1)
  {
	return action_name;
  }
  else
  {
	return "deviation_spiders/" + action_name;
  }
}

// Open
$( document ).ready(function() {
	show_deliverable_chart_data("<%= @last_spider.id.to_s %>", "<%= @meta_activity_id %>", "<%= @meta_activity.name %>: Deliverable chart");
	show_activity_chart_data("<%= @last_spider.id.to_s %>", "<%= @meta_activity_id %>", "<%= @meta_activity.name %>: Activity chart");
});
</SCRIPT>

<script src="/javascripts/highcharts/deviation_spider_chart.js" type="text/javascript"></script>  
<script src="/javascripts/highcharts/group_export.js" type="text/javascript"></script>


<div><%= link_to "Go to spider", {:action => "index", :milestone_id => @last_spider.milestone_id } %></div>

<h2>Current spider</h2>

<div style="float:left;">Meta Activity : <%= select_tag('choose_meta_activity', options_for_select(@meta_activities, @meta_activity_id.to_i), {:onchange=>"change_meta_activity(this.value)"}) %></div>
<br/><br/><br/>

<% table_activity = nil %>
<% table_deliverable = nil %>
<% @questions.each do |q| %>

	<!-- ACTIVITY -->
	<% if table_activity == nil or table_activity != q.deviation_question.deviation_activity_id %>
		<% if table_activity != nil %>
			</table><br />
		<% end %>
		<table class="deviation_spider_table">
		<tr class="deviation_spider_tr_activity">
			<td><%= q.deviation_question.deviation_activity.name %></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
		<% table_activity 		= q.deviation_question.deviation_activity_id %>
		<% table_deliverable	= nil %>
	<% end %>

	<!-- DELIVERABLE  -->
	<% if table_deliverable == nil or table_deliverable != q.deviation_spider_deliverable.deviation_deliverable_id %>
		<tr class="deviation_spider_tr_deliverable">
			<td></td>
			<td><%= q.deviation_spider_deliverable.deviation_deliverable.name %></td>
			<td></td>
			<td colspan="2">
				<% deliverable_not_done_class = "deliverable_not_done" %>
				<% deliverable_not_done_class = "deliverable_not_done_select" if q.deviation_spider_deliverable.not_done %>

				<%= button_to "Not done without admissible justification", {:action => "set_false_for_spider_deliverable", :deviation_spider_deliverable_id => q.deviation_spider_deliverable_id}, :confirm=>"Are you sure that you want to set all questions in all activities to NO ?", :method => :post, :class => deliverable_not_done_class, :disabled => true %> 
			</td>
		</tr>
		<% table_deliverable	= q.deviation_spider_deliverable.deviation_deliverable_id %>
	<% end %>

	<!-- QUESTION -->
	<tr>
		<td></td>
		<td></td>
		<td width="400"><%= q.deviation_question.question_text %></td>
		<td>  
			<% yes_class = 'class="answer_button"' %>
			<% no_class = 'class="answer_button"' %>
			<% if q.answer %>
				<% yes_class = 'class="answer_button_select"' %>
			<% end %>
			<% if !q.answer and q.answer != nil %>
				<% no_class = 'class="answer_button_select"' %>
			<% end %>

			<input disabled <%= yes_class %> id="button_yes_<%= q.id.to_s %>" type="button" value="Yes" onclick="set_question('<%= q.id.to_s %>', true);" />
			<input disabled <%= no_class %>  id="button_no_<%= q.id.to_s %>"  type="button" value="No" onclick="set_question('<%= q.id.to_s %>', false);" />
		</td>
		<td><%= check_box_tag(:answer_reference, true, q.answer_reference, {:disabled => true}) %></td>
	</tr>
<% end %>
</table>


<br/>
	<div style="float:left;">Meta Activity : <%= select_tag('choose_meta_activity', options_for_select(@meta_activities, @meta_activity_id.to_i), {:onchange=>"change_meta_activity(this.value)"}) %></div>
	<br/><br/>

	<h2>Actions</h2>
	Delivery file link: <%= @last_spider.file_link %>

	<p><%= button_to "Delete consolidated spider", {:action => "delete_consolidated_spider", :deviation_spider_id => @last_spider.id} %></p>

	<br/>
	<h2>Charts actions: </h2>
	<table>
	<tr>
		<td>Deliverables chart: </td>
		<td><input type="button" value="Export all" onclick="export_deliverables('<%= @last_spider.id.to_s %>');" /></td>
	</tr>
		<td>Activities chart: </td>
		<td><input type="button" value="Export all" onclick="export_activities('<%= @last_spider.id.to_s %>');" /></td>
	</tr></table>

<div class="deviation_spider_chart" id="deviation_spider_chart_deliverable"></div>
<div class="deviation_spider_chart" id="deviation_spider_chart_activity"></div>
<div class="deviation_spider_export_chart" id="export_chart"></div>
