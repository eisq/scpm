<%= hidden_field :activity, :id %>

<p><%= label_tag 'Operational Activity' %>
<%= select(:activity, :svt_deviation_meta_activity_id, @meta_activities) %>
</p>

<p><%= label_tag 'Name' %>
<%= text_field :activity, :name %> </p>

<p><%= label_tag 'Is active' %>
<%= radio_button :activity, :is_active, true %> Yes
<%= radio_button :activity, :is_active, false %> No
</p>



<h3>Deliverables</h3>
<% for deliverable in @deliverables %>
	<%= check_box_tag('deliverable_ids[]', deliverable.id, @activity.has_deliverable?(deliverable.id)) %><%= "#{deliverable.name}" %><br/>
<% end %>
