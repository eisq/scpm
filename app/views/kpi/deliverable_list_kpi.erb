<%=
@xml.instruct! :xml, :version=>"1.0", :encoding=>"UTF-8"
@xml.Workbook({
  'xmlns'      => "urn:schemas-microsoft-com:office:spreadsheet",
  'xmlns:o'    => "urn:schemas-microsoft-com:office:office",
  'xmlns:x'    => "urn:schemas-microsoft-com:office:excel",
  'xmlns:html' => "http://www.w3.org/TR/REC-html40",
  'xmlns:ss'   => "urn:schemas-microsoft-com:office:spreadsheet"
  }) do


@xml.Styles do
  @xml.Style 'ss:ID' => 'Default', 'ss:Name' => 'Normal' do
    @xml.Alignment 'ss:Vertical' => 'Top', 'ss:WrapText' => '1'
    @xml.Borders
    @xml.Font 'ss:FontName' => 'Verdana'
    @xml.Interior
    @xml.NumberFormat
    @xml.Protection 
  end
  @xml.Style 'ss:ID' => 'TitlePink', 'ss:Name' => 'TitlePink' do
    @xml.Font  'x:Family'=>'Swiss', 'ss:Color'=>'#000000', 'ss:Bold'=>"1"
    @xml.Interior 'ss:Color'=>"#fde9d9", 'ss:Pattern'=>'Solid'
    @xml.Borders do
      @xml.Border 'ss:Position'=>'Top', 'ss:Color'=>'#000000', 'ss:Weight'=>"2", 'ss:LineStyle'=> 'Continuous'
      @xml.Border 'ss:Position'=>'Bottom', 'ss:Color'=>'#000000', 'ss:Weight'=>"2", 'ss:LineStyle'=> 'Continuous'
      @xml.Border 'ss:Position'=>'Left', 'ss:Color'=>'#000000', 'ss:Weight'=>"2", 'ss:LineStyle'=> 'Continuous'
      @xml.Border 'ss:Position'=>'Right', 'ss:Color'=>'#000000', 'ss:Weight'=>"2", 'ss:LineStyle'=> 'Continuous'
    end
  end
end
  
  @xml.Worksheet 'ss:Name' => 'Deliverables list' do
    @xml.Table do
      # Columns width
      @xml.Column 0, {'ss:Width' => 80}
      @xml.Column 1, {'ss:Width' => 80}
      @xml.Column 2, {'ss:Width' => 70}
      @xml.Column 3, {'ss:Width' => 200}
      @xml.Column 4, {'ss:Width' => 200}
      @xml.Column 5, {'ss:Width' => 70}

      # Header
      @xml.Row do
        @xml.Cell 'ss:StyleID' => 'TitlePink' do
          @xml.Data "Lifecycle", 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
        end
        @xml.Cell 'ss:StyleID' => 'TitlePink' do
          @xml.Data "WorkStream", 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
        end
        @xml.Cell 'ss:StyleID' => 'TitlePink' do
          @xml.Data "Suite", 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
        end
        @xml.Cell 'ss:StyleID' => 'TitlePink' do
          @xml.Data "Activity", 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
        end
        @xml.Cell 'ss:StyleID' => 'TitlePink' do
          @xml.Data "Deliverable", 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
        end
        @xml.Cell 'ss:StyleID' => 'TitlePink' do
          @xml.Data "Planned to be done", 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
        end
      end

      # Rows
      for setting in @settings
        @xml.Row do
          @xml.Cell do
            @xml.Data setting.lifecycle, 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
          end
          @xml.Cell do
            @xml.Data setting.workstream, 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
          end
          @xml.Cell do
            @xml.Data setting.plm, 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
          end
          @xml.Cell do
            @xml.Data setting.activity_name, 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
          end
          @xml.Cell do
            @xml.Data setting.deliverable_name, 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
          end
          @xml.Cell do
            @xml.Data setting.plan_to_do, 'ss:Type' => 'String'; @xml.NamedCell 'ss:Name' => 'FilterDatabase'
          end
        end #End row
      end #End for

    end #End xml.table
  end #End xml.worksheet

end 

%>